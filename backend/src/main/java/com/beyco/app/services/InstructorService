package com.beyco.app.services;

import com.beyco.app.models.Instructor;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import javax.sql.DataSource;
import java.sql.*;

@Service
public class InstructorService {

    // --- CAMBIO: Se inyecta DataSource en lugar de Connection ---
    private final DataSource dataSource;

    @Autowired
    public InstructorService(DataSource dataSource) {
        this.dataSource = dataSource;
    }

    public Instructor findInstructorById(int instructorId) {
        // --- CAMBIO: Se ajustó la consulta para usar columnas existentes ---
        String sql = "SELECT Num_Empleado, Nombre, Apellido_paterno, Apellido_materno FROM usuarios WHERE Num_Empleado = ?";
        
        // --- CAMBIO: Se obtiene la conexión del DataSource ---
        try (Connection connection = dataSource.getConnection();
             PreparedStatement pstmt = connection.prepareStatement(sql)) {
            
            pstmt.setInt(1, instructorId);
            try (ResultSet rs = pstmt.executeQuery()) {
                if (rs.next()) {
                    Instructor instructor = new Instructor();
                    instructor.setId(rs.getInt("Num_Empleado"));

                    // Concatenamos el nombre completo para mostrarlo
                    String nombreCompleto = rs.getString("Nombre") + " " + rs.getString("Apellido_paterno") + " " + rs.getString("Apellido_materno");
                    instructor.setNombre(nombreCompleto.trim());
                    
                    // Asumiendo que el modelo Instructor no tiene un campo 'titulo', lo eliminamos.
                    // Si lo tuviera y corresponde a otra columna, ajusta el nombre aquí.
                    
                    return instructor;
                }
            }
        } catch (SQLException e) {
            e.printStackTrace();
            throw new RuntimeException("Error al buscar instructor: " + e.getMessage());
        }
        return null; // Retorna null si no se encuentra
    }
}