package com.beyco.app.controllers;

import com.beyco.app.models.Instructor;
import com.beyco.app.models.CursoInstructor; // Cambiar a CursoInstructor
import com.beyco.app.services.InstructorService;
import com.beyco.app.services.CursoInstructorService; // Usar este servicio
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.*;

import java.util.List;

@RestController
@RequestMapping("/api")
@CrossOrigin(origins = {"http://localhost:3000", "http://192.168.0.55:3000", "http://10.0.46.106:3000", "http://10.0.46.106:3000", "http://10.0.47.154:3000", "http://10.0.43.69:3000", "http://10.0.47.108:3000", " http://10.0.45.30:3000"})
public class InstructorController {

    @Autowired
    private InstructorService instructorService;

    @Autowired
    private CursoInstructorService cursoInstructorService; // Cambiar a este servicio

    // Endpoint para obtener instructor
    @GetMapping("/instructores/{id}")
    public ResponseEntity<Instructor> getInstructorById(@PathVariable int id) {
        Instructor instructor = instructorService.findInstructorById(id);
        if (instructor != null) {
            return ResponseEntity.ok(instructor);
        }
        return ResponseEntity.notFound().build();
    }

    // Endpoint CORREGIDO para obtener cursos del instructor
    @GetMapping("/cursos-instructor/instructor/{instructorId}")
    public ResponseEntity<List<CursoInstructor>> getCursosByInstructor(@PathVariable int instructorId) {
        try {
            List<CursoInstructor> cursos = cursoInstructorService.getCursosByInstructor(instructorId);
            return ResponseEntity.ok(cursos);
        } catch (Exception e) {
            e.printStackTrace();
            return ResponseEntity.internalServerError().build();
        }
    }
}